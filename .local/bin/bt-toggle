#!/bin/bash

blocked="$(rfkill list bluetooth | grep yes)"
if [ $button = 1 ]; then
    [[ -n "$blocked" ]] && rfkill unblock bluetooth
    status="ğŸ›³"
elif [ $button = 3 ]; then
    [[ -z "$blocked" ]] && rfkill block bluetooth
    status="ğŸš¢"
elif [ -z "$blocked" ]; then
    status="ğŸ›³"
else
    status="ğŸš¢"
fi

echo $status
exit 0
