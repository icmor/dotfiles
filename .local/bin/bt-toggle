#!/bin/bash

blocked="$(rfkill list bluetooth | grep yes)"
indicator="ß·"
if [ $button = 1 ]; then
    [[ -n "$blocked" ]] && rfkill unblock bluetooth
    color="00bfff"	# bluetooth on
elif [ $button = 3 ]; then
    [[ -z "$blocked" ]] && rfkill block bluetooth
    color="696969"	# bluetooth off
elif [ -z "$blocked" ]; then
    color="00bfff"	# bluetooth on
else
    color="696969"	# bluetooth off
fi

printf '{"full_text":"%s", "color":"%s"}\n' $indicator $color
