#!/bin/bash

action=$(echo -e 'logout\nsuspend\nshutdown\nreboot\nhibernate' | fuzzel -d)

case $action in
    "logout") swaymsg exit
	      ;;
    "suspend") systemctl suspend
	       ;;
    "shutdown") systemctl poweroff
		;;
    "reboot") reboot
	      ;;
    "hibernate") systemctl hibernate
	      ;;
esac
